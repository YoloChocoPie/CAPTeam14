@model CAPTeam14.Models.danhsachGV

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}



@using (Html.BeginForm())
{





    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">

                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                             <li class="breadcrumb-item"><a href="@Url.Action("Index1","Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item active">Cập nhật thông tin giảng viên</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-5">
                        <div class="card">
                            <form role="form">
                                @Html.AntiForgeryToken()

                                <div class="card-body">
                                    <label>Cập nhật thông tin giảng viên</label>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })






                                    <div class="form-group">
                                        <label>Mã giảng viên</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-envelope"></i></span>
                                            </div>

                                            @Html.EditorFor(model => model.maGV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.maGV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Tên giảng viên</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-user"></i></span>
                                            </div>
                                            @Html.EditorFor(model => model.tenGV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.tenGV, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Loại giảng viên</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-user"></i></span>
                                            </div>
                                            @{
                                                List<SelectListItem> listItems = new List<SelectListItem>();

                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Cơ hữu",
                                                    Value = "Cơ hữu",
                                                });

                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Giảng viên thỉnh giảng",
                                                    Value = "Giảng viên thỉnh giảng",
                                                });
                                               
                                            }
                                            @Html.DropDownListFor(model => model.loaiGV, listItems, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.loaiGV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Khoa</label>

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-user"></i></span>
                                            </div>
                                            @{
                                                List<SelectListItem> listItems1 = new List<SelectListItem>();

                                                listItems1.Add(new SelectListItem
                                                {
                                                    Text = "Khoa Công nghệ thông tin",
                                                    Value = "Khoa Công nghệ thông tin",
                                                });

                                            }
                                            @Html.DropDownListFor(model => model.khoa, listItems1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.khoa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <a class="btn btn-danger btn-block" href="@Url.Action("Index", "dsGV")">Quay lại</a>
                                        </div>
                                        <div class="col-6">
                                            <button type="submit" value="Save" class="btn btn-success btn-block">Cập nhật</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")



}





















