@model IEnumerable<CAPTeam14.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index1","Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Danh sách Ticket</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách Ticket</h3>


                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>

                                        <th>
                                            Nội dung tóm tắt ticket
                                        </th>
                                        <th>
                                            Người gửi
                                        </th>

                                        <th>
                                            Trạng thái
                                        </th>




                                        <th hidden="hidden"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if ((int)Session["role"] == 1)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tenTicket)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.nguoigui)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.trangthai)
                                                </td>
                                                <td>

                                                    <a class="btn btn-file detailBtn1 btn btn-info" title="Xem chi tiết" data-model-id1="@Url.Action("Edit", "Contact", new { id = item.ID })" data-id1="@Url.Action("Details", "Contact", new { id = item.ID })"><i class="fas fa-eye"></i></a>

                                                </td>

                                            </tr>
                                        }

                                    }
                                    else if ((int)Session["role"] == 2 || (int)Session["role"] == 3 || (int)Session["role"] == 4)
                                    {
                                        foreach (var item in Model.Where(x => x.nguoigui == ViewBag.ten))
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tenTicket)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.nguoigui)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.trangthai)
                                                </td>
                                                <td hidden="hidden">
                                                    @*bỏ trống*@
                                                </td>

                                            </tr>
                                        }
                                    }


                                </tbody>
                                @*<tfoot>
                                        <tr>
                                            <th>Rendering engine</th>
                                            <th>Browser</th>
                                            <th>Platform(s)</th>
                                            <th>Engine version</th>
                                            <th>CSS grade</th>
                                        </tr>
                                    </tfoot>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>




@if (TempData["EditContact"] != null)
{
    <script type="text/javascript">
        $(function () {
            Swal.fire({
                title: 'Thông báo',
                text: 'Bạn đã xử lý thành công !!!',
                icon: 'success',
                showConfirmButton: true,
                timer: 1500,
            });
        });
    </script>
}


@if (TempData["taoticket"] != null)
{
    <script type="text/javascript">
        $(function () {
            Swal.fire({
                title: 'Thông báo',
                text: 'Bạn đã gửi ticket thành công !!!',
                icon: 'success',
                showConfirmButton: true,
                timer: 1500,
            });
        });
    </script>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")





    <script type="text/javascript">
        $(document).ready(function () {


            $('#example1').on('click', '.detailBtn1', function () {
                var button = $(this);
                var s_id = button.data("id1");
                var url = button.data("model-id1");
                $.ajax({
                    url: s_id,
                    typr: "GET",
                    contentType: "application/json;charset=UTF-8",
                    dataType: "json",
                    success: function (result) {
                        $.confirm({
                            columnClass: 'col-md-5',
                            title: '<div class="text-center container"><p>Thông tin của ticket' + result.a + '  </p> </div>',
                            content: '' +
                                '<form action="" class="formName container">' +
                                '<div class="form-group">' +
                                '<div class="row">' +
                                '<div class="col-md-12">' +
                                '<label>Mã ticket </label>' +
                                '<input type="text" class="form-control" value="' + result.a + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-group">' +
                                '<div class="row">' +
                                '<div class="col-md-12">' +
                                '<label>Nội dung tóm tắt ticket </label>' +
                                '<input type="text" class="form-control" value="' + result.b + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-group">' +
                                '<div class="row">' +
                                '<div class="col-md-12">' +
                                '<label>Nội dung chi tiết </label>' +
                                '<input type="text" class="form-control" value="' + result.c + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-group">' +
                                '<div class="row">' +
                                '<div class="col-md-12">' +
                                '<label>Người gửi </label>' +
                                '<input type="text" class="form-control" value="' + result.d + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '<label>Vấn đề </label>' +
                                '<input type="text" class="form-control" value="' + result.e + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '<label>Trạng thái </label>' +
                                '<input type="text" class="form-control" value="' + result.f + '" readonly />' +
                                '</div>' +
                                '</div>' +
                                '</div>' +
                                '</div>' +




                                '</form>',
                            buttons: {
                                confirm: {
                                    text: 'Xử lý',
                                    btnClass: 'btn-green',
                                    action: function () {
                                        window.location.assign(url);
                                    }
                                },
                                cancel: {
                                    text: 'Thoát',
                                    btnClass: 'btn-red',
                                    action: function () { }
                                },
                            },
                        });
                    },
                    error: function (errormessage) {
                        $.alert(errormessage.responseText);
                    }
                });
            });
        });
    </script>

}




















