}
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index1">Trang chủ</a></li>

                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Tên Học Kì
                                        </th>
                                        <th>
                                            Năm Bắt Đầu
                                        </th>
                                        <th>
                                            Năm Kết thúc
                                        </th>



                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>


                                            <td>
                                                @Html.DisplayFor(modelItem => item.tenHK)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.namBD)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.namKT)
                                            </td>
                                            @if (item.lockstat == null || item.lockstat == false)
                                            {
                                                if ((int)Session["role"] == 1 || (int)Session["role"] == 2)
                                                {
                                        <td>
                                            @Html.ActionLink("Xem thời khóa biểu", "Index", new { id = item.ID }, new { @class = "seeTT" }) |
                                            @Html.ActionLink("Xem thống kê", "DetailStatisticAll", new { id = item.ID }) |
                                            @Html.ActionLink("Import thời khóa biểu", "Catalog", new { id = item.ID }) |
                                            @Html.ActionLink("Export thời khóa biểu", "IndexEx", new { id = item.ID }) |
                                            @if (ViewBag.kiemtra != null)
                                            {
                                                @Html.ActionLink("Xem thời khóa biểu cá nhân", "Index2", new { id = item.ID }) 
                                            }

                                            @Html.ActionLink("Xóa Thời khóa biểu", "DeleteTKB", new { id = item.ID }, new { style = "color:red", @class = "deleteBtn" }) |
                                            @Html.ActionLink("Khóa Thời khóa biểu", "LockTKB", new { id = item.ID })

                                        </td>
                                                }
                                                if ((int)Session["role"] == 3)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Xem thời khóa biểu", "Index", new { id = item.ID }, new { @class = "seeTT" })
                                                    </td>
                                                }
                                                if ((int)Session["role"] == 4)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Xem thời khóa biểu", "Index2", new { id = item.ID }, new { @class = "seeTT" })
                                                    </td>
                                                }
                                            }
                                            else if (item.lockstat == true)
                                            {
                                                if ((int)Session["role"] == 1 || (int)Session["role"] == 2)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Xem thời khóa biểu", "Index", new { id = item.ID }, new { @class = "seeTT" }) |
                                                        <label>Xem thống kê | </label>
                                                        <label>Import thời khóa biểu | </label>
                                                        <label>Export thời khóa biểu | </label>
                                                        <label>Xóa thời khóa biểu | </label>
                                                        @Html.ActionLink("Bỏ khóa Thời khóa biểu", "UnLockTKB", new { id = item.ID })

                                                    </td>
                                                }
                                                if ((int)Session["role"] == 3)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Xem thời khóa biểu", "Index", new { id = item.ID }, new { @class = "seeTT" }) |
                                                    </td>
                                                }
                                                if ((int)Session["role"] == 4)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Xem thời khóa biểu", "Index2", new { id = item.ID }, new { @class = "seeTT" })
                                                    </td>
                                                }
                                            }



                                        </tr>
                                    }

                                </tbody>
                                @*<tfoot>
                                        <tr>
                                            <th>Rendering engine</th>
                                            <th>Browser</th>
                                            <th>Platform(s)</th>
                                            <th>Engine version</th>
                                            <th>CSS grade</th>
                                        </tr>
                                    </tfoot>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

