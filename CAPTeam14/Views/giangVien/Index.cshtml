@model IEnumerable<CAPTeam14.Models.nguoiDung>

@{
    ViewBag.Title = "phanQuyen";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="~/Home/Index">Trang Chủ</a></li>
                        <li class="breadcrumb-item active">Phân Quyền</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách giảng viên</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Mã Giảng Viên
                                        </th>
                                        <th>
                                            Tên Giảng Viên
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Vai Trò
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>

                                        @if (item.role == null)
                                        {
                                            <td style="color:red">
                                                @Html.DisplayFor(modelItem => item.maGV)
                                            </td>
                                            <td style="color:red">

                                                @Html.DisplayFor(modelItem => item.tenGV)
                                            </td>

                                            <td style="color:red">
                                                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                            </td>

                                            if (item.role == null)
                                            {
                                                <td style="color:red">
                                                    Chưa Kích Hoạt
                                                </td>
                                            }
                                            else if (item.role == 1)
                                            {
                                                <td style="color:red">
                                                    Admin
                                                </td>
                                            }
                                            else if (item.role == 2)
                                            {
                                                <td style="color:red">
                                                    Ban chủ nhiệm khoa
                                                </td>
                                            }
                                            else if (item.role == 3)
                                            {
                                                <td style="color:red">
                                                    Bộ môn
                                                </td>
                                            }
                                            else if (item.role == 4)
                                            {
                                                <td style="color:red">
                                                    Giảng viên
                                                </td>
                                            }


                                        }
                                        else if (item.role == 0)
                                        {
                                            <td style="color:red">
                                                @Html.DisplayFor(modelItem => item.maGV)
                                            </td>
                                            <td style="color:red">

                                                @Html.DisplayFor(modelItem => item.tenGV)
                                            </td>

                                            <td style="color:red">
                                                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                            </td>

                                            if (item.role == 0)
                                            {
                                                <td style="color:red">
                                                    Chưa Kích Hoạt
                                                </td>
                                            }
                                            else if (item.role == 1)
                                            {
                                                <td style="color:red">
                                                    Admin
                                                </td>
                                            }
                                            else if (item.role == 2)
                                            {
                                                <td style="color:red">
                                                    Ban chủ nhiệm khoa
                                                </td>
                                            }
                                            else if (item.role == 3)
                                            {
                                                <td style="color:red">
                                                    Bộ môn
                                                </td>
                                            }
                                            else if (item.role == 4)
                                            {
                                                <td style="color:red">
                                                    Giảng viên
                                                </td>
                                            }


                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.maGV)
                                            </td>
                                            <td>

                                                @Html.DisplayFor(modelItem => item.tenGV)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                            </td>
                                            if (item.role == null)
                                            {
                                                <td>
                                                    Chưa Kích Hoạt
                                                </td>
                                            }
                                            else if (item.role == 1)
                                            {
                                                <td>
                                                    Admin
                                                </td>
                                            }
                                            else if (item.role == 2)
                                            {
                                                <td>
                                                    Ban chủ nhiệm khoa
                                                </td>
                                            }
                                            else if (item.role == 3)
                                            {
                                                <td>
                                                    Bộ môn
                                                </td>
                                            }
                                            else if (item.role == 4)
                                            {
                                                <td>
                                                    Giảng viên
                                                </td>
                                            }
                                        }

                                        <td>


                                            <a class="btn btn-file detailBtn btn btn-danger" title="Xem chi tiết" data-model-id="@Url.Action("Edit", "giangVien", new { id = item.ID })" data-id="@Url.Action("Details", "giangVien", new { id = item.ID })"><i class="fas fa-eye"></i></a>

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                                @*<tfoot>
                                        <tr>
                                            <th>Rendering engine</th>
                                            <th>Browser</th>
                                            <th>Platform(s)</th>
                                            <th>Engine version</th>
                                            <th>CSS grade</th>
                                        </tr>
                                    </tfoot>*@
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

