                Swal.fire({
                    width: '40%',
                    imageUrl: s,
                    imageWidth: '100%',
                    imageHeight: '100%',
                    imageAlt: 'Avatar',
                    padding: '0',
                    margin:'0',
                    showConfirmButton: false,
                });
            });
