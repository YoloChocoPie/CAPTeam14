@model CAPTeam14.Models.AspNetUser
@{
    Layout = null;
    ViewBag.Title = "Register";
}


<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <title>Registration Form</title>
    <link rel="stylesheet" href="@Url.Content("~/Reg/Sstyle.css")">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div class="background">
        <div class="container">
            <div class="title">Registration</div>
            <div class="content">
                <div class="form-group">
                    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @*<h4>Association Form</h4>*@
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<p class="text-info">
                You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                Please enter a user name for this site below and click the Register button to finish
                logging in.
            </p>*@
                        <div class="user-details">

                            <div class="input-box">
                                @Html.LabelFor(m => m.UserName, "Họ tên", new { @class = "details" })
                                <div class="input-box">
                                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { placeholder = "Nhập họ và tên", required = "required" } })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="input-box">
                                @Html.LabelFor(m => m.maGV, "Mã giảng viên", new { @class = "details" })
                                <div class="input-box">
                                    @Html.EditorFor(m => m.maGV, new { htmlAttributes = new { placeholder = "Nhập mã giảng viên", required = "required" } })
                                    @Html.ValidationMessageFor(m => m.maGV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="input-box">
                                @Html.LabelFor(m => m.khoa, "Khoa", new { @class = "details" })
                                <div class="input-box">
                                    @Html.EditorFor(m => m.khoa, new { htmlAttributes = new { placeholder = "Khoa Công Nghệ Thông Tin", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.khoa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="input-box">
                                @Html.LabelFor(m => m.sdt, "Số điện thoại", new { @class = "details" })
                                <div class="input-box">
                                    @Html.EditorFor(m => m.sdt, new { htmlAttributes = new { placeholder = "Nhập số điện thoại", required = "required" } })
                                    @Html.ValidationMessageFor(m => m.sdt, "", new { @class = "text-danger", require = "require" })
                                </div>
                            </div>
                            <div class="input-box">
                                @Html.LabelFor(m => m.gioiTinh, "Giới tính", new { @class = "details" })
                                <div class="input-box">

                                    @Html.ValidationMessageFor(m => m.gioiTinh, "", new { @class = "text-danger" })
                                    <select class="custom-select" name="gioiTinh" id="gioiTinh">
                                        <option value="true" selected>Nam</option>
                                        <option value="false">Nữ</option>

                                    </select>
                                </div>
                            </div>
                            <div class="input-box">
                                @Html.LabelFor(m => m.loaiGV, "Loại giảng viên", new { @class = "details" })
                                <div class="input-box">

                                    @Html.ValidationMessageFor(m => m.loaiGV, "", new { @class = "text-danger" })
                                    <select class="custom-select" name="loaiGV" id="loaiGV">
                                        <option value="true" selected>Cơ hữu</option>
                                        <option value="false">Thỉnh giảng</option>

                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="gender-details">
                            @Html.HiddenFor(model => model.role)
                        </div>
                        <div class="gender-details">
                            @Html.HiddenFor(model => model.Email);
                        </div>

                        <div class="button">

                            <input type="submit"  value="Register" />

                        </div>
                    }

                </div>










            </div>
        </div>
    </div>


</body>

</html>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



